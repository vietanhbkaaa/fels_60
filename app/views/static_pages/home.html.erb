<% if logged_in? %>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <%= render "shared/user_info" %>
    </div>
      <div class="col-md-1 col-md-offset-5 ">
        <%= link_to t("links.word"), "#" , class: "btn btn-lg btn-primary" %>
      </div>
      <div class="col-md-1 col-md-offset-1">
        <%= link_to t("links.course"), courses_path , class: "btn btn-lg btn-primary" %>
      </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "layouts.welcome" %></h1>
    <%= link_to t("links.sign_up"), signup_path , class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"),
    "http://rubyonrails.org/" %>
<% end %>
